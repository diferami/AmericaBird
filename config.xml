<?xml version='1.0' encoding='utf-8'?>
<widget id="com.americabird.game" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AmericaBird</name>
    <description>
       Juego para la comunidad Americana.
    </description>
    <author email="diferamo@gmail.com" href="http://www.americabird.com">
        Good People Technologies.
    </author>
    <content src="index.html" />
    <platform name="android">
        <access origin="*" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="tel:*" />
        <allow-intent href="sms:*" />
        <allow-intent href="mailto:*" />
        <allow-intent href="geo:*" />
        <allow-navigation href="http://*/*" />
        <allow-navigation href="https://*/*" />
        <allow-navigation href="data:*" />
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/ldpi.png" />
        <icon density="mdpi" src="res/mdpi.png" />
        <icon density="hdpi" src="res/hdpi.png" />
        <icon density="xhdpi" src="res/xhdpi.png" />
        <icon density="xxhdpi" src="res/xxhdpi.png" />
        <icon density="xxxhdpi" src="res/xxxhdpi.png" />
    </platform>
    <preference name="Fullscreen" value="true" />
    <preference name="orientation" value="portrait" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-geolocation" spec="^3.0.0" />
    <plugin name="cordova-plugin-device" spec="^1.1.7" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.4" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.2" />
    <plugin name="cordova-plugin-console" spec="^1.1.0" />
    <engine name="android" spec="^6.3.0" />
</widget>
